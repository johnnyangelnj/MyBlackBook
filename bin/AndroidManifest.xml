<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.johnnyangel.myblackbook"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.johnnyangel.myblackbook.SplashScreenActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.johnnyangel.myblackbook.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.johnnyangel.myblackbook.AddBookActivity"
            android:label="@string/title_activity_add_book" >
        </activity>
        <activity
            android:name="com.johnnyangel.myblackbook.OverlayActivity"
            android:label="@string/title_activity_overlay" >
        </activity>
        <activity
            android:name="com.johnnyangel.myblackbook.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>

        <service
            android:name="com.johnnyangel.myblackbook.ui.OverlayService"
            android:enabled="true"
            android:exported="false" >
        </service>

        <activity
            android:name="com.johnnyangel.myblackbook.ExitActivity"
            android:label="@string/title_activity_exit" >
        </activity>
        <activity
            android:name="com.johnnyangel.myblackbook.OpenBookActivity"
            android:label="@string/title_activity_open_book" >
        </activity>
        <activity
            android:name="com.johnnyangel.myblackbook.BookContactsActivity"
            android:label="@string/title_activity_book_contacts" >
        </activity>
        <activity
            android:name="com.johnnyangel.myblackbook.BookImagesActivity"
            android:label="@string/title_activity_book_images" >
        </activity>
        <activity
            android:name="com.johnnyangel.myblackbook.BookNotesActivity"
            android:label="@string/title_activity_book_notes" >
        </activity>
    </application>

</manifest>